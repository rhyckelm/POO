def editar(cpf, **kwargs):
    for i in lista:
        if(cpf == i['cpf']):
            cargo = input('Cargo: ')
            i['cargo'] = cargo
            salario = input()
            i['salario'] = salario
            telefone = input("Telefone: ")
            i['telefone'] = telefone

            print('Funcionario editado')
        else:
            print('Cpf nao encontrado.')



cadastrar()

print(lista)
